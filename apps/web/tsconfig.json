{
  "extends": "@repo/typescript-config/nextjs.json",
  "compilerOptions": {
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "~/*": [
        "./src/*"
      ],
      "~/public/*": [
        "./public/*"
      ]
    },
    "strictNullChecks": true
  },
  "include": [
    "types/svgr.d.ts",
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "next.config.mjs",
    "postcss.config.mjs",
  ],
  "exclude": [
    "node_modules"
  ]
}